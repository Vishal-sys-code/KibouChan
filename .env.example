# KibouChan Environment Variables Example
# Rename this file to .env and fill in your actual values

# Application settings
APP_SECRET_KEY=your_app_secret_key_here
DEBUG=False
ENVIRONMENT=production

# Database settings (if using a database)
DATABASE_URL=sqlite:///./data/kibouchan.db

# API keys for emotion analysis service (if using an external API)
API_KEY=your_emotion_analysis_api_key_here
API_ENDPOINT=https://api.example.com/emotion-analysis

# JWT settings (if using authentication)
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email configuration (if implementing email features)
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=your_email@example.com
MAIL_SERVER=smtp.example.com
MAIL_PORT=587 